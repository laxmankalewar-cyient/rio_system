<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_text_generation_config_form" model="ir.ui.view">
        <field name="name">text.generation_config.form</field>
        <field name="model">text.generation_config</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="related_model" options='{"no_open": True, "no_create": True}'/>
                            <field name="delimiter"/>
                        </group>
                        <group>

                        </group>
                    </group>
                    <notebook>
                        <page name="column_mapping" string="Fields">
                            <field name="columns_ids" widget="one2many">

                                <tree name="columns_ids" editable="bottom">
                                    <field name="data_source" invisible="1"/>
                                    <field name="sequence" widget="handle"/>
                                    <field name="text_field"
                                            domain="[('model_id','=',data_source),
                                            ('name','not in',['active', '__last_update','write_date','write_uid','create_uid','create_date','id','display_name'])]" options="{'no_create': True}"/>
                                    <field name="field_description"/>
                                    <field name="text_prefix"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>

            </form>
        </field>
    </record>

    <record id="view_text_generation_config_tree" model="ir.ui.view">
        <field name="name">text.generation_config.tree</field>
        <field name="model">text.generation_config</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="delimiter"/>
                <field name="related_model"/>
            </tree>
        </field>
    </record>

</odoo>