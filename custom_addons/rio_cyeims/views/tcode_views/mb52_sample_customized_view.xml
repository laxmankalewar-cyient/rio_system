<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="mb52_sample_customized_view_search" model="ir.ui.view">
            <field name="name">mb52.sample_customized.search</field>
            <field name="model">mb52.sample_customized</field>
            <field name="arch" type="xml">
                <search>
                    <field name='plant'/>
                    <field name='name_1'/>
                    <field name='material'/>
                    <field name='material_description'/>
                    <field name='base_unit_of_measure'/>
                    <field name='unrestricted'/>
                    <field name='blocked'/>
                    <field name='in_quality_insp'/>
                    <field name='stock_in_transit'/>
                    <field name='df_stor_loc_level'/>

                </search>
            </field>
        </record>
        <record model="ir.ui.view" id="mb52_sample_customized_tree">
            <field name="name">mb52.sample_customized.tree_view</field>
            <field name="model">mb52.sample_customized</field>
            <field name="arch" type="xml">
                <tree>
                    <field name='plant' optional='show'/>
                    <field name='name_1' optional='show'/>
                    <field name='material' optional='show'/>
                    <field name='material_description' optional='show'/>
                    <field name='base_unit_of_measure' optional='show'/>
                    <field name='unrestricted' optional='show'/>
                    <field name='blocked' optional='show'/>
                    <field name='in_quality_insp' optional='hide'/>
                    <field name='stock_in_transit' optional='hide'/>
                    <field name='df_stor_loc_level' optional='hide'/>

                </tree>
            </field>
        </record>

        <record id="view_mb52_sample_customized_form" model="ir.ui.view">
            <field name="name">mb52.sample_customized.form</field>
            <field name="model">mb52.sample_customized</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name='plant'/>
                                <field name='name_1'/>


                            </group>
                            <group>
                                <field name='material'/>
                                <field name='material_description'/>

                            </group>
                        </group>
                        <group>
                            <group>
                                <field name='base_unit_of_measure'/>
                                <field name='unrestricted'/>
                                <field name='blocked'/>

                            </group>
                            <group>
                                <field name='in_quality_insp'/>
                                <field name='stock_in_transit'/>
                                <field name='df_stor_loc_level'/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
