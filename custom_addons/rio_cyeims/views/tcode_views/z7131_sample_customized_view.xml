<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="z7131_sample_customized_view_search" model="ir.ui.view">
            <field name="name">z7131.sample_customized.search</field>
            <field name="model">z7131.sample_customized</field>
            <field name="arch" type="xml">
                <search>
                    <field name='material'/>
                    <field name='material_description'/>
                    <field name='bun'/>
                    <field name='matl_group'/>
                    <field name='sect_code'/>
                    <field name='un_spsc_code'/>
                </search>
            </field>
        </record>
        <record model="ir.ui.view" id="z7131_sample_customized_tree">
            <field name="name">z7131.sample_customized.tree_view</field>
            <field name="model">z7131.sample_customized</field>
            <field name="arch" type="xml">
                <tree>
                    <field name='material'/>
                    <field name='material_description'/>
                    <field name='bun'/>
                    <field name='matl_group'/>
                    <field name='purchasing_text_line_01'/>
                    <field name='purchasing_text_line_02'/>
                    <field name='purchasing_text_line_03'/>
                    <field name='purchasing_text_line_04' optional='hide'/>
                    <field name='purchasing_text_line_05' optional='hide'/>
                    <field name='purchasing_text_line_06' optional='hide'/>
                    <field name='purchasing_text_line_07' optional='hide'/>
                    <field name='purchasing_text_line_08' optional='hide'/>
                    <field name='purchasing_text_line_09' optional='hide'/>
                    <field name='purchasing_text_line_10' optional='hide'/>
                    <field name='sect_code' optional='show'/>
                    <field name='un_spsc_code' optional='show'/>

                </tree>
            </field>
        </record>

        <record id="view_z7131_sample_customized_form" model="ir.ui.view">
            <field name="name">z7131.sample_customized.form</field>
            <field name="model">z7131.sample_customized</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name='material'/>
                                <field name='material_description'/>

                            </group>
                            <group>
                                <field name='bun'/>
                                <field name='matl_group'/>

                            </group>
                        </group>
                        <group>
                            <group>
                                <field name='purchasing_text_line_01'/>
                                <field name='purchasing_text_line_02'/>
                                <field name='purchasing_text_line_03'/>
                                <field name='purchasing_text_line_04'/>
                                <field name='purchasing_text_line_05'/>

                            </group>
                            <group>
                                <field name='purchasing_text_line_06'/>
                                <field name='purchasing_text_line_07'/>
                                <field name='purchasing_text_line_08'/>
                                <field name='purchasing_text_line_09'/>
                                <field name='purchasing_text_line_10'/>

                            </group>
                        </group>
                        <group>
                            <group>
                                <field name='sect_code'/>
                                <field name='un_spsc_code'/>
                            </group>
                            <group>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
