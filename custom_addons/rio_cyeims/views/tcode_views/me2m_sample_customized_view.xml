<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="me2m_sample_customized_view_search" model="ir.ui.view">
            <field name="name">me2m.sample_customized.search</field>
            <field name="model">me2m.sample_customized</field>
            <field name="arch" type="xml">
                <search>
                    <field name='purchasing_doc_type'/>
                    <field name='purchasing_document'/>
                    <field name='item'/>
                    <field name='material'/>
                    <field name='short_text'/>
                    <field name='purchasing_group'/>
                    <field name='plant'/>
                    <field name='storage_location'/>
                </search>
            </field>
        </record>
        <record model="ir.ui.view" id="me2m_sample_customized_tree">
            <field name="name">me2m.sample_customized.tree_view</field>
            <field name="model">me2m.sample_customized</field>
            <field name="arch" type="xml">
                <tree>
                    <field name='purchasing_doc_type'/>
                    <field name='purchasing_document'/>
                    <field name='item'/>
                    <field name='material'/>
                    <field name='short_text'/>
                    <field name='purchasing_group' optional='show'/>
                    <field name='po_history_release_documentation' optional='hide'/>
                    <field name='vendor_supplying_plant' optional='hide'/>
                    <field name='plant' optional='show'/>
                    <field name='storage_location' optional='show'/>
                    <field name='quantity_in_sku' optional='hide'/>
                    <field name='stockkeeping_unit' optional='hide'/>
                    <field name='net_price' optional='hide'/>
                    <field name='currency' optional='hide'/>
                    <field name='price_unit' optional='hide'/>
                    <field name='still_to_be_delivered' optional='hide'/>
                </tree>
            </field>
        </record>

        <record id="view_me2m_sample_customized_form" model="ir.ui.view">
            <field name="name">me2m.sample_customized.form</field>
            <field name="model">me2m.sample_customized</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name='purchasing_doc_type'/>
                                <field name='purchasing_document'/>
                            </group>
                            <group>
                                <field name='item'/>
                                <field name='material'/>
                                <field name='short_text'/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name='purchasing_group'/>
                                <field name='po_history_release_documentation'/>
                                <field name='vendor_supplying_plant'/>
                            </group>
                            <group>
                                <field name='plant'/>
                                <field name='storage_location'/>
                                <field name='quantity_in_sku'/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name='stockkeeping_unit'/>
                                <field name='net_price'/>
                                <field name='still_to_be_delivered'/>
                            </group>
                            <group>
                                <field name='currency'/>
                                <field name='price_unit'/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
