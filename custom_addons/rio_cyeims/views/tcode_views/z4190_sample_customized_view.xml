<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="z4190_sample_customized_view_search" model="ir.ui.view">
            <field name="name">z4190.sample_customized.search</field>
            <field name="model">z4190.sample_customized</field>
            <field name="arch" type="xml">
                <search>
                    <field name='plant'/>
                    <field name='group'/>
                    <field name='grpcountr'/>
                    <field name='short_text'/>
                    <field name='plannergrp'/>
                    <field name='planner_group'/>
                    <field name='activity'/>
                    <field name='ctrl_key'/>
                    <field name='operation_short_text'/>
                    <field name='component'/>
                    <field name='material_description'/>
                    <field name='item_cat'/>
                    <field name='status'/>
                </search>
            </field>
        </record>
        <record model="ir.ui.view" id="z4190_sample_customized_tree">
            <field name="name">z4190.sample_customized.tree_view</field>
            <field name="model">z4190.sample_customized</field>
            <field name="arch" type="xml">
                <tree>
                    <field name='plant'/>
                    <field name='group'/>
                    <field name='grpcountr'/>
                    <field name='short_text'/>
                    <field name='plannergrp' optional='show'/>
                    <field name='planner_group' optional='show'/>
                    <field name='activity' optional='show'/>
                    <field name='ctrl_key' optional='show'/>
                    <field name='operation_short_text' optional='hide'/>
                    <field name='component' optional='hide'/>
                    <field name='material_description' optional='hide'/>
                    <field name='item_cat' optional='hide'/>
                    <field name='status' optional='hide'/>
                    <field name='usage' optional='hide'/>
                    <field name='assembly' optional='hide'/>
                    <field name='functional_location' optional='hide'/>
                    <field name='pu_label' optional='hide'/>
                    <field name='quantity' optional='hide'/>
                    <field name='comp_unit' optional='hide'/>
                    <field name='valid_from' optional='hide'/>
                    <field name='valid_from_1' optional='hide'/>
                    <field name='valid_from_2' optional='hide'/>
                    <field name='valid_from_3' optional='hide'/>

                </tree>
            </field>
        </record>

        <record id="view_z4190_sample_customized_form" model="ir.ui.view">
            <field name="name">z4190.sample_customized.form</field>
            <field name="model">z4190.sample_customized</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name='plant'/>
                                <field name='group'/>
                                <field name='grpcountr'/>
                                <field name='short_text'/>

                            </group>
                            <group>
                                <field name='plannergrp'/>
                                <field name='planner_group'/>
                                <field name='activity'/>
                                <field name='ctrl_key'/>
                                <field name='operation_short_text'/>

                            </group>
                        </group>
                        <group>
                            <group>
                                <field name='component'/>
                                <field name='material_description'/>
                                <field name='item_cat'/>
                                <field name='status'/>
                                <field name='usage'/>

                            </group>
                            <group>
                                <field name='assembly'/>
                                <field name='functional_location'/>
                                <field name='pu_label'/>
                                <field name='quantity'/>
                                <field name='comp_unit'/>

                            </group>
                        </group>
                        <group>
                            <group>
                                <field name='valid_from'/>
                                <field name='valid_from_1'/>

                            </group>
                            <group>
                                <field name='valid_from_2'/>
                                <field name='valid_from_3'/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
