<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="category_rio_security" model="ir.module.category">
        <field name="name">Rio System</field>
    </record>
    <record id="group_rio_user" model="res.groups">
        <field name="name">Read Only User</field>
        <field name="category_id" ref="category_rio_security" />
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]" />
    </record>
    <record id="group_rio_manager" model="res.groups">
        <field name="name">Admin</field>
        <field name="implied_ids" eval="[(4, ref('group_rio_user'))]" />
        <field name="category_id" ref="category_rio_security" />
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"
        />
    </record>
    <record id="group_rio_dashboard_admin" model="res.groups">
        <field name="name">Dashboard Admin</field>
        <field name="implied_ids" eval="[(4, ref('group_rio_user'))]" />
        <field name="category_id" ref="category_rio_security" />
    </record>
    <record id="group_rio_liner_taxonomy_admin" model="res.groups">
        <field name="name">Liner Taxonomy Editor</field>
        <field name="implied_ids" eval="[(4, ref('group_rio_user'))]" />
        <field name="category_id" ref="category_rio_security" />
    </record>
</odoo>
